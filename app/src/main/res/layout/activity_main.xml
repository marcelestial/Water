<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spaceside.water.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="288dp"
        android:layout_height="496dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="parent">

        <CheckBox
            android:id="@+id/check_1"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_2"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_3"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_4"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_5"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_6"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_7"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_6"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/check_8"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:onClick="onCheckboxClicked"
            android:textSize="24sp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
